{
    "connection": "orders-kafka",
    "name": "orders",
    "topic": "orders",
    "vars": {
        "customer": {
            "_gen": "lookup",
            "connection": "customers-kafka",
            "topic": "customers",
            "path": []
        },
        "product": {
            "_gen": "lookup",
            "connection": "products-kafka",
            "topic": "products",
            "path": []
        }
    },
    "value": {
        "order_id": {
            "_gen": "sequentialString",
            "startingFrom": 200000,
            "expr": "O-~d"
        },
        "customer_id": {
            "_gen": "var",
            "var": "customer",
            "path": ["value", "customer_id"]
        },
        "product_id": {
            "_gen": "var",
            "var": "product",
            "path": ["value", "product_id"]
        },
        "price": {
            "_gen": "var",
            "var": "product",
            "path": ["value", "price"]
        },
        "order_ts" : {
            "_gen": "now"
        }
    },
    "localConfigs" : {
        "throttleMs": {
            "_gen": "uniformDistribution",
            "bounds": [10000, 15000]
        },
        "kafkaValueAvroSchemaHint": {
            "type": "record",
            "name": "orders",
            "fields": [
                {
                    "name": "order_id",
                    "type": "string"
                },
                {
                    "name": "customer_id",
                    "type": "string"
                },
                {
                    "name": "product_id",
                    "type": "string"
                },
                {
                    "name": "price",
                    "type": "double"
                },
                {
                    "name": "order_ts",
                    "type": {
                        "type" : "long",
                        "flink.precision" : 3,
                        "flink.version" : "1",
                        "logicalType" : "timestamp-millis"
                    }
                }
            ] 
        }
    }
}
