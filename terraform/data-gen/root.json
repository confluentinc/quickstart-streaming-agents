{
    "generators": [
        {
            "_gen": "loadJsonFile",
            "file": "/home/generators/orders.json"
        },
        {
            "_gen": "loadJsonFile",
            "file": "/home/generators/products.json"
        },
        {
            "_gen": "loadJsonFile",
            "file": "/home/generators/customers.json"
        }
    ],
    "schedule": {
        "stages": [
            {
                "generators": [
                    "customers"
                ],
                "overrides": {
                    "customers": {
                        "localConfigs": {
                            "maxEvents": 100
                        }
                    }
                }
            },
            {
                "generators": [
                    "products"
                ]
            },
            {
                "generators": [
                    "orders"
                ],
                "overrides": {
                    "orders": {
                        "localConfigs": {
                            "throttleMs": {
                                "_gen": "uniformDistribution",
                                "bounds": [90000, 95000]
                            }
                        }
                    }
                }              
            }
        ]
    },
    "connections": {
        "orders-kafka": {
            "_gen": "loadJsonFile",
            "file": "/home/connections/orders.json"
        },
        "customers-kafka": {
            "_gen": "loadJsonFile",
            "file": "/home/connections/customers.json"
        },
        "products-kafka": {
            "_gen": "loadJsonFile",
            "file": "/home/connections/products.json"
        }
    }
}
