{
    "connection": "customers-kafka",
    "name": "customers",
    "topic": "customers",
    "value": {
        "customer_id": {
            "_gen": "sequentialString",
            "startingFrom": 100000,
            "expr": "C-~d"
        },
        "customer_email": {
            "_gen": "string",
            "expr": "#{Internet.emailAddress}"
        },
        "customer_name": {
            "_gen": "string",
            "expr": "#{Name.fullName}"
        },
        "state": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "value": {
                        "_gen": "string",
                        "expr": "#{Address.state}"
                    },
                    "weight": 3
                },
                {
                    "value": "California",
                    "weight": 3
                },
                {
                    "value": "New York",
                    "weight": 2
                },
                {
                    "value": "Texas",
                    "weight": 2
                },
                {
                    "value": "Florida",
                    "weight": 1
                }
            ]
        },
        "updated_at": {
            "_gen": "now"
        }
    },
    "localConfigs": {}
}