{
    "connection": "customers-kafka",
    "name": "customers",
    "topic": "customers",
    "value": {
        "customer_id": {
            "_gen": "sequentialString",
            "startingFrom": 100000,
            "expr": "C-~d"
        },
        "customer_email": {
            "_gen": "string",
            "expr": "#{Internet.emailAddress}"
        },
        "customer_name": {
            "_gen": "string",
            "expr": "#{Name.fullName}"
        },
        "address": {
            "_gen": "string",
            "expr": "#{Address.streetAddress}, #{Address.zipCode}"
        },
        "state": {
            "_gen": "weightedOneOf",
            "choices": [
                {
                    "value": {
                        "_gen": "string",
                        "expr": "#{Address.state}"
                    },
                    "weight": 3
                },
                {
                    "value": "California",
                    "weight": 3
                },
                {
                    "value": "New York",
                    "weight": 2
                },
                {
                    "value": "Texas",
                    "weight": 2
                },
                {
                    "value": "Florida",
                    "weight": 1
                }
            ]
        },
        "updated_at": {
            "_gen": "now"
        }
    },
    "localConfigs": {
        "kafkaValueAvroSchemaHint": {
            "type": "record",
            "name": "customers",
            "fields": [
                {
                    "name": "customer_id",
                    "type": "string"
                },
                {
                    "name": "customer_email",
                    "type": "string"
                },
                {
                    "name": "customer_name",
                    "type": "string"
                },
                {
                    "name": "state",
                    "type": "string"
                },
                {
                    "name": "updated_at",
                    "type": {
                        "type": "long",
                        "flink.precision": 3,
                        "flink.version": "1",
                        "logicalType": "timestamp-millis"
                    }
                }
            ]
        }
    }
}